{
  "name": "lazy-meal",
  "version": "1.0.0",
  "description": "Lunch/Dinner Selector Assistant",
  "private": true,
  "scripts": {
    "frontend:dev": "yarn --cwd ./frontend dev",
    "frontend:build": "yarn --cwd ./frontend build",
    "backend:dev": "uv run --directory backend uvicorn app.main:app --reload --host 0.0.0.0 --port 3000",
    "backend:start": "uv run --directory backend uvicorn app.main:app --host 0.0.0.0 --port 3000",
    "dev": "yarn frontend:dev & yarn backend:dev",
    "install:all": "yarn --cwd ./frontend"
  },
  "devDependencies": {
    "sass-embedded": "^1.89.2"
  }
}
