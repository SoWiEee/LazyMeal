{
  "name": "lazy-meal",
  "version": "1.0.0",
  "description": "Lunch/Dinner Selector Assistant",
  "private": true,
  "scripts": {
    "frontend:dev": "bun --cwd ./frontend dev",
    "frontend:build": "bun --cwd ./frontend build",
    "backend:dev": "uv run --directory backend uvicorn app.main:app --reload --host 0.0.0.0 --port 3000",
    "backend:start": "uv run --directory backend uvicorn app.main:app --host 0.0.0.0 --port 3000",
    "dev": "bun run frontend:dev & bun run backend:dev",
    "install:all": "bun --cwd ./frontend install"
  },
  "devDependencies": {
    "sass": "^1.89.2"
  },
  "packageManager": "bun@1.2.14"
}
